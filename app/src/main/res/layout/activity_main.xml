<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dimens_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_txt_text_view"
        android:textSize="@dimen/dimens_txt_text_view" />

    <EditText
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/string_hint_edit_text"
        android:textSize="@dimen/dimens_txt_edit_text" />

    <Button
        android:id="@+id/btn_seach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_txt_button"
        android:textSize="@dimen/dimens_txt_button" />

</LinearLayout>